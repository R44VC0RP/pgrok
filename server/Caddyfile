{
	# Use Cloudflare DNS for ACME DNS-01 challenge (wildcard certs)
	acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}
}

# Wildcard domain â€” Caddy provisions a single cert for *.yourdomain.com
# Replace "yourdomain.com" with your actual domain
*.yourdomain.com {
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
	}

	# Default response when no tunnel is active for this subdomain
	respond "No active tunnel on {host}" 502
}
